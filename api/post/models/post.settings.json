{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "releaseDate": {
      "type": "date"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "admin_user": {
      "plugin": "admin",
      "model": "user"
    },
    "categories": {
      "collection": "category",
      "via": "posts",
      "dominant": true
    }
  }
}
